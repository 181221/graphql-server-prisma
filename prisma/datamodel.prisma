type Movie {
  id: ID! @id
  createdAt: DateTime! @createdAt
  title: String!
  requestedBy: User @relation(link: INLINE)
  requestedById : String 
  img: String
  tmdb_id: String! @unique
  genres: [String]
  release_date: String
  vote_average: String
  overview: String
  downloaded: Boolean  @default(value: false)
}

type User { 
  id: ID! @id
  name: String
  email: String! @unique
  movies: [Movie!]! 
  role: Role  @default(value: CUSTOMER)
} 

enum Role {
  ADMIN
  CUSTOMER
}
